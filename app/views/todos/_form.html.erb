        <div class="form-group col-md-10">
          <%= f.label :description, "ToDo" %>
          <%= f.text_field :description, class: 'form-control'%>
        </div>
     
        
        <div class="form-group col-md-5">
          <%= f. label :completed, "completedÂ¿?" %>
          <%= f.check_box :completed %>
