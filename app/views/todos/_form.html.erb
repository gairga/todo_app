<%= form_with model: @todo, local: true do |f| %>
  <fieldset>
    <legend>Legend</legend>
      <div class="form-group">
          <%= f.label :description, "Tarea", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :description, class: 'form-control'%>
        </div>
      </div>

      <div class="form-group">
        <%= f. label :completed%>
        <div class="col-lg-10">
          <%= f.check_box :completed, class: 'checkbox'%>
        </div>
      </div>
          
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= link_to 'Volver', todos_path, class: 'btn btn-default' %>
          <%= f.submit 'Crear ToDo', class: 'btn btn-primary' %>
        </div>
      </div>
  </fieldset>
<% end %>
    